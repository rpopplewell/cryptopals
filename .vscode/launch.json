{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'my_project'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=my_project",
                    "--package=my_project"
                ],
                "filter": {
                    "name": "my_project",
                    "kind": "bin"
                }
            },
            "args": [], // Command line arguments passed to the program to debug
            "cwd": "${workspaceFolder}", // Set the current working directory to the workspace folder
            "environment": [], // Environment variables go here
            "sourceLanguages": ["rust"]
        }
    ]
}
